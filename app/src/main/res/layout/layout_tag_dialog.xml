<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <android.widget.Button
        android:id="@+id/etuTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tagsHeading"
        android:text="Easy to understand" />

    <android.widget.Button
        android:id="@+id/shortTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tagsHeading"
        android:layout_toEndOf="@id/etuTag"
        android:text="Short" />

    <android.widget.Button
        android:id="@+id/longTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tagsHeading"
        android:layout_toEndOf="@id/shortTag"
        android:text="long" />

    <android.widget.Button
        android:id="@+id/ttpTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etuTag"
        android:text="To the point" />

    <android.widget.Button
        android:id="@+id/doneButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ttpTag"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:text="Done" />

    <TextView
        android:id="@+id/tagsHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="30dp"
        android:text="Select Tags" />

</RelativeLayout>