<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_sign_up"
    tools:context="com.college.collegeconnect.activities.StepTwoSignUp">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/otherCollege"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textColorHint="@color/colorwhite"
        app:hintTextColor="@color/colorwhite"
        android:visibility="gone"
        style ="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxStrokeColor="@drawable/text_box_signup"
        app:layout_constraintTop_toBottomOf="@id/collegeSpinner"
        app:layout_constraintEnd_toStartOf="@+id/guideline5"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/guideline5"
        tools:visibility="visible">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="15"
            android:textCursorDrawable="@null"
            android:hint="College Name"
            android:inputType="textCapCharacters"
            android:textColor="@color/colorwhite" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textColorHint="@color/colorwhite"
        app:hintTextColor="@color/colorwhite"
        android:visibility="gone"
        style ="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxStrokeColor="@drawable/text_box_signup"
        app:layout_constraintTop_toBottomOf="@id/otherCollege"
        app:layout_constraintEnd_toStartOf="@+id/guideline5"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/guideline5"
        tools:visibility="visible">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="15"
            android:textCursorDrawable="@null"
            android:hint="Academic Year"
            android:inputType="textCapCharacters"
            android:textColor="@color/colorwhite" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textbranch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style ="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:textColorHint="@color/colorwhite"
        app:hintTextColor="@color/colorwhite"
        app:boxStrokeColor="@drawable/text_box_signup"
        app:layout_constraintTop_toBottomOf="@id/year"
        app:layout_constraintEnd_toStartOf="@+id/guideline5"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/guideline5">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="15"
            android:hint="Branch"
            android:textCursorDrawable="@null"
            android:inputType="textCapCharacters"
            android:textColor="@color/colorwhite" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColorHint="@color/colorwhite"
        app:boxStrokeColor="@drawable/text_box_signup"
        app:layout_constraintEnd_toStartOf="@+id/guideline5"
        app:layout_constraintHorizontal_bias="0.5"
        app:hintTextColor="@color/colorwhite"
        style ="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:layout_constraintStart_toStartOf="@+id/guideline5"
        app:layout_constraintTop_toBottomOf="@+id/textbranch">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="15"
            android:hint="@string/rollno"
            android:inputType="number"
            android:textCursorDrawable="@null"
            android:textColor="@color/colorwhite" />
    </com.google.android.material.textfield.TextInputLayout>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.08" />

    <ProgressBar
        android:id="@+id/StepTwoProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline5"
        app:layout_constraintStart_toStartOf="@+id/guideline5"
        app:layout_constraintTop_toTopOf="@+id/guideline13"
        app:layout_constraintVertical_bias="0.16000003" />

    <android.widget.Button
        android:id="@+id/stepTwoButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_design"
        android:backgroundTint="@color/latestBlue"
        android:text="@string/sign_up"
        android:textAllCaps="false"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/colorwhite"
        app:layout_constraintEnd_toStartOf="@+id/guideline5"
        app:layout_constraintStart_toStartOf="@+id/guideline5"
        app:layout_constraintTop_toBottomOf="@id/textuser" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:fontFamily="sans-serif"
        android:text="Step 2/2"
        android:textColor="@color/colorwhite"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/guideline5"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline10" />

    <TextView
        android:id="@+id/select_college"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select College"
        android:textColor="@color/colorwhite"
        app:layout_constraintTop_toBottomOf="@id/textView13"
        app:layout_constraintStart_toStartOf="@id/collegeSpinner"
        android:layout_margin="10dp"/>

    <Spinner
        android:id="@+id/collegeSpinner"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/spinner_layout"
        app:layout_constraintTop_toBottomOf="@+id/select_college"
        app:layout_constraintEnd_toEndOf="@id/textbranch"
        app:layout_constraintStart_toStartOf="@+id/textbranch" />

    <ImageView
    android:id="@+id/imageView8"
    android:layout_width="20dp"
    android:layout_height="20dp"
    app:layout_constraintBottom_toBottomOf="@id/collegeSpinner"
    app:layout_constraintEnd_toEndOf="@id/collegeSpinner"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/ic_arrow_down" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/contact_networkk"
        android:textAlignment="center"
        android:clickable="true"
        android:focusable="true"
        android:textColor="@color/latestBlue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline5"
        app:layout_constraintStart_toStartOf="@+id/guideline5" />


</androidx.constraintlayout.widget.ConstraintLayout>